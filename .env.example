# Exchange API Credentials
COINDCX_API_KEY=your_coindcx_api_key_here
COINDCX_SECRET_KEY=your_coindcx_secret_key_here

# Trading Configuration
EXCHANGE_NAME=coindcx
TRADING_PAIR=BTC/USDT
TRADING_ENABLED=false
MAX_TRADE_AMOUNT=100
RISK_TOLERANCE=0.02
TRADING_STRATEGY=machine_learning

# Performance Settings
USE_CPP_MODULES=true
ENABLE_GPU_ACCELERATION=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/tmp/albert_trading_bot.log

# Security
SECRET_KEY=generate_a_random_secret_key_here
ENCRYPTION_SALT=your_encryption_salt_here

# Render Specific Configurations
PORT=10000
RENDER=true
DEBUG=false

# Machine Learning Model Configuration
ML_MODEL_PATH=/tmp/ml_model
PREDICTION_CONFIDENCE_THRESHOLD=0.75

# Monitoring and Alerts
SENTRY_DSN=your_sentry_dsn_here
TELEGRAM_ALERT_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Deployment Flags
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
